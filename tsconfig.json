    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "outDir": "./build"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  